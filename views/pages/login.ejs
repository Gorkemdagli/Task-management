<div class="min-h-screen flex flex-col items-center justify-center">
    <div class="w-full text-center mb-8">
        <a href="/" class="text-4xl font-bold text-white-600 cursor-pointer">Görev Yönetimi</a>
    </div>
    <div class="auth-container p-8 rounded-lg shadow-lg max-w-md w-full">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold auth-title">Giriş Yap</h2>
            <p class="mt-2 auth-subtitle">Görev yönetim sistemine hoş geldiniz</p>
        </div>
        
        <form class="space-y-6" action="/auth/login" method="POST">
            <% if (locals.error) { %>
                <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
                    <span class="block sm:inline"><%= error %></span>
                </div>
            <% } %>
            
            <% if (locals.redirect) { %>
                <input type="hidden" name="redirect" value="<%= redirect %>">
            <% } %>
            
            <div>
                <label class="block text-sm font-semibold mb-2 auth-label" for="email">
                    E-posta
                </label>
                <input type="email" id="email" name="email" 
                    class="w-full px-4 py-2 rounded-lg focus:outline-none auth-input"
                    placeholder="ornek@email.com" required>
            </div>
            
            <div>
                <label class="block text-sm font-semibold mb-2 auth-label" for="password">
                    Şifre
                </label>
                <input type="password" id="password" name="password" 
                    class="w-full px-4 py-2 rounded-lg focus:outline-none auth-input"
                    placeholder="••••••••" required>
            </div>
            
            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input type="checkbox" id="remember" name="remember" class="h-4 w-4 auth-checkbox">
                    <label for="remember" class="ml-2 text-sm auth-text">Beni hatırla</label>
                </div>
                <a href="/forgot-password" class="text-sm auth-link">Şifremi unuttum</a>
            </div>
            
            <button type="submit" 
                class="w-full py-2 px-4 rounded-lg auth-button text-white">
                Giriş Yap
            </button>
        </form>
        
        <div class="text-center mt-6">
            <p class="text-sm auth-text">
                Hesabınız yok mu? 
                <a href="/register" class="auth-link">Kayıt ol</a>
            </p>
        </div>
    </div>
</div>

<!-- Harici JavaScript dosyasını dahil et -->
<script src="/js/login.js"></script> 