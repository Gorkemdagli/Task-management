    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "autoprefixer": "^10.4.21",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.4",
